\NewDocumentCommand{\PDPrintChange}{ s m m m }{%
    \IfBooleanF{#1}{%
        \begingroup%
        \hspace{0.25cm}%
        \parbox[b]{\dimexpr \linewidth - \packdoc@PageNumberWidth - 0.25cm}{%
            \setlength{\hangindent}{0.7cm}#2%
            \ifstrempty{#3}{}{\dotfill}%
        }%
        \ifstrempty{#3}{}{%
            \hangindent=0.6\linewidth%
