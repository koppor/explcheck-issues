    \packdoc@AddCharToBuffer{\{}%
    \packdoc@SetMacroChangeInfo{\packdoc@InfoResult}{#1}{label}%
    \expandafter\packdoc@AddToBuffer\expandafter{\packdoc@InfoResult}%
    \packdoc@AddCharToBuffer{\}}%
