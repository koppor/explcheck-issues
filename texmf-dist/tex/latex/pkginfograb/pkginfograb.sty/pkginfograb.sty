    \seq_pop_left:NN  #1 \l__pkginfograb_tmpx_tl
    \seq_pop_right:NN #1 \l__pkginfograb_tmpx_tl
    \tl_set:Ne #2 
      { \seq_format:Nn #1 {0>2} }
