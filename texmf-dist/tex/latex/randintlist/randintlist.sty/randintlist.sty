\ExplSyntaxOn
\cs_new_eq:NN \randintseed \sys_gset_rand_seed:n
\NewDocumentCommand\intascsortlist{m}
{
	\clist_sort:Nn #1
	{
		\fp_compare:nNnTF {##1} > {##2}
		{ \sort_return_swapped: }
		{ \sort_return_same: }
	}
}
\NewDocumentCommand\intdessortlist{m}
{
	\clist_sort:Nn #1
	{
		\fp_compare:nNnTF {##1} < {##2}
		{ \sort_return_swapped: }
		{ \sort_return_same: }
	}
}
